{
  "name": "to-be-read-exchange-hub",
  "version": "1.0.0",
  "description": "Smart inventory management system for book exchange",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
  "start": "node src/server.js",
  "go": "bash scripts/bootstrap.sh --interactive",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "debug": "NODE_OPTIONS='--inspect=0.0.0.0:9229' nodemon src/server.js",
    "build": "node scripts/build.js",
    "lint": "eslint src/ --ext .js --max-warnings=0",
    "format": "prettier --write \"**/*.{js,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,yml,yaml}\"",
    "setup": "bash scripts/bootstrap.sh",
    "bootstrap": "bash scripts/bootstrap.sh",
    "smoke": "bash scripts/smoke.sh",
    "db:init": "bash scripts/init-db.sh",
    "verify": "npm run lint && npm run format:check && npm test && npm run smoke",
    "refresh": "bash scripts/dev-refresh.sh",
    "stop": "bash scripts/stop-server.sh",
    "status": "bash scripts/server-status.sh",
    "docker:build": "docker build -t to-be-read-exchange-hub .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "deploy:heroku": "bash scripts/deploy-heroku.sh",
    "deploy:aws": "bash scripts/deploy-aws.sh",
    "deploy:docker": "bash scripts/deploy-docker.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.66.0",
    "@opentelemetry/exporter-prometheus": "^0.207.0",
    "@opentelemetry/sdk-node": "^0.207.0",
    "axios": "^1.13.1",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "opossum": "^9.0.0",
    "papaparse": "^5.5.3",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "response-time": "^2.3.4",
    "swagger-jsdoc": "^6.2.8",
  "swagger-ui-express": "^5.0.1",
  "marked": "^12.0.2",
  "sanitize-html": "^2.13.0",
    "uuid": "^13.0.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "eslint": "^9.38.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "npm": "11.6.2",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  }
}
